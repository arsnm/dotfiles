# Ghostty config

window-decoration = true
theme = Gruber Darker
shell-integration-features = no-cursor,sudo,no-title, ssh-terminfo
cursor-style = block
adjust-cell-height = 25%
background-opacity = 0.96

font-family = JetBrainsMono Nerd Font Mono
font-size = 16
font-style = regular
font-feature = -calt, -liga, -dlig

mouse-hide-while-typing = true
mouse-scroll-multiplier = 2

# keybindings
keybind = ctrl+/>r=reload_config
keybind = ctrl+/>x=close_surface

keybind = ctrl+/>n=new_window

# tabs
keybind = ctrl+/>c=new_tab
keybind = ctrl+/>shift+l=next_tab
keybind = ctrl+/>shift+h=previous_tab
keybind = ctrl+/>comma=move_tab:-1
keybind = ctrl+/>period=move_tab:1

# quick tab switch
keybind = ctrl+/>1=goto_tab:1
keybind = ctrl+/>2=goto_tab:2
keybind = ctrl+/>3=goto_tab:3
keybind = ctrl+/>4=goto_tab:4
keybind = ctrl+/>5=goto_tab:5
keybind = ctrl+/>6=goto_tab:6
keybind = ctrl+/>7=goto_tab:7
keybind = ctrl+/>8=goto_tab:8
keybind = ctrl+/>9=goto_tab:9

# split
keybind = ctrl+/>\=new_split:right
keybind = ctrl+/>-=new_split:down

keybind = ctrl+/>j=goto_split:bottom
keybind = ctrl+/>k=goto_split:top
keybind = ctrl+/>h=goto_split:left
keybind = ctrl+/>l=goto_split:right

keybind = ctrl+/>z=toggle_split_zoom

keybind = ctrl+/>e=equalize_splits
