# Ghostty config

window-decoration = true
theme = Gruber Darker
shell-integration-features = no-cursor,sudo,no-title, ssh-terminfo
cursor-style = block
adjust-cell-height = 25%
background-opacity = 0.96

font-family = JetBrainsMono Nerd Font Mono
font-size = 16
font-style = regular
font-feature = -calt, -liga, -dlig

mouse-hide-while-typing = true
mouse-scroll-multiplier = 2

# keybindings
keybind = ctrl+n>r=reload_config
keybind = ctrl+n>x=close_surface

keybind = ctrl+n>n=new_window

# tabs
keybind = ctrl+n>c=new_tab
keybind = ctrl+n>shift+l=next_tab
keybind = ctrl+n>shift+h=previous_tab
keybind = ctrl+n>comma=move_tab:-1
keybind = ctrl+n>period=move_tab:1

# quick tab switch
keybind = ctrl+n>1=goto_tab:1
keybind = ctrl+n>2=goto_tab:2
keybind = ctrl+n>3=goto_tab:3
keybind = ctrl+n>4=goto_tab:4
keybind = ctrl+n>5=goto_tab:5
keybind = ctrl+n>6=goto_tab:6
keybind = ctrl+n>7=goto_tab:7
keybind = ctrl+n>8=goto_tab:8
keybind = ctrl+n>9=goto_tab:9

# split
keybind = ctrl+n>\=new_split:right
keybind = ctrl+n>-=new_split:down

keybind = ctrl+n>j=goto_split:bottom
keybind = ctrl+n>k=goto_split:top
keybind = ctrl+n>h=goto_split:left
keybind = ctrl+n>l=goto_split:right

keybind = ctrl+n>z=toggle_split_zoom

keybind = ctrl+n>e=equalize_splits
